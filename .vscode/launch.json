    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch Config",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/config.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "${workspaceFolder}/../mingw64/bin/gdb.exe",
            "setupCommands": [
                {
                    "text": "set substitute-path /mnt/c/Users C:/Users"
                },
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch",
